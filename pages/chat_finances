import streamlit as st

st.title("Bank Balance Simulation")

# make sure balance exists in session state
if "balance" not in st.session_state:
    st.session_state.balance = 0

# number input (linked to session_state)
st.session_state.balance = st.number_input(
    "Enter Current Balance (£):",
    min_value=0,
    step=1,
    value=st.session_state.balance,
    key="balance_input"
)

# always display balance
st.write(f"Your current bank balance is: £{st.session_state.balance}")
